

<div class="banner-list" style="background-image: url(https://img.freepik.com/free-photo/assortment-cinema-elements-red-background-with-copy-space_23-2148457848.jpg?w=740&t=st=1660827892~exp=1660828492~hmac=56fafbf5e4aaa22697ad8c38a244a535a829fca71ef724c84a510698e1063359)">
<h3>Movies List</h3>
</div>


<div class="movie-cards">
  <div class="list-text">
    <h3>My Movies</h3>
    <%= link_to 'Add a movie', new_movie_path(@movie), class: "btn btn-success"  %>
  </div>

  <div class="movie-card">
        <% @movies.each do |movie| %>
          <div class="list-group-item">
          <%= image_tag movie.poster_url, class:"poster-img" %>
            <div class="movie-card-text">
              <h4><strong><%= movie.title %> â€¢ <%= movie.rating %><i class="fas fa-star star-yellow"></i></strong></h4>
              <p class="overflow-ellipsis"><%= movie.overview %></p>
              <div class="show-delete">
              <%= link_to "See more", movie_path(movie), class: "ms-3 text-primary" %>
              <%= link_to "Delete", movie_path(movie), method: :delete, data: { confirm: "Are you sure?"}, class: "ms-3 text-danger"%>
              </div>
            </div>
          </div>
        <% end %>
  </div>
</div>
